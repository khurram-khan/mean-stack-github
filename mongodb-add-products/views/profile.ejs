<% include header %>
	<div class="container">
		<div class="row">
			<% if(email){ %>
			<div class="col-lg-4 col-lg-offset-1">
				
				    <br />
				  	<img class="img-circle img-responsive" src=<%= path %> />
				  
				  <h3>Shop Name # <%= name %></h3>
				  <p>Address # <%= address %></p>
				  <p>Country # <%= country %></p>
				  <p><a href='/logout'>Logout </a></p>
				  
			</div>
			<div class="col-lg-6">
				<h2>Products Detail</h2>
					<% for(var i=0; i<product.length; i++) {%>
					   <h3><%= product[i].prodName %></h3>
					   <img src="<%= product[i].prodImg %>" />
					   <p><%= product[i].prodDescrip %></p>
					<% } %>
				
				<form action="/profile" method="post" enctype="multipart/form-data">
				  <div class="form-group">
					<label for="recipient-name" class="control-label">Product Name</label>
					<input type="text" id="prodname" class="form-control" name="prodname">
				  </div>
				  <div class="form-group">
					<label for="message-text" class="control-label">Product Image</label>
					<input type="file" id="prodimg" class="form-control" name="prodimg" >
				  </div>
				  <div class="form-group">
					<label for="message-text" class="control-label">Product Description</label>
					<textarea class="form-control" id="descrip" name="descrip" ></textarea>
				  </div>
				  <button type="submit" class="btn btn-default" data-toggle="modal" data-target="#myModal">Add your product</button>
				</form>
				
			</div>
			<% }else{%>
			  <div class="col-lg-12">
			  	<p>Please <a href='/login'>login </a> or <a href='/signup'>Signup </a></p>
			  </div>
			<% } %>
		</div>
	</div>
<% include footer %>
